<% unless user_signed_in? %>
  <div style="text-align:center; margin: 8px 0 16px;">
    <%= button_to "👤体験入門(ゲストですぐ遊ぶ)", guest_sign_in_path, method: :post, class: "btn--secondary" %>
    <%= link_to "🔰入門希望者はこちら(新規ユーザー登録)", new_user_registration_path, class: "btn" %>
  </div>
<% end %>

<div id="falling-leaves" class="falling-layer" aria-hidden="true"></div>
<div class="hero">
  <div class="hero-title">PKに挑戦！</div>
  <div class="hero-sub">左・中・右の三択で読み合い。君は何連ゴールできる？</div>
</div>

<p class="kick-prompt">どこに蹴る？</p>
<div class="pk-field">
  <%= image_tag "pk_goal_2.png", class: "goal", alt: "" %>

  <%= image_tag "keeper_normal.png", class: "keeper #{@keeper_choice}", alt: "" %>

  <div class="shoot-zone left">
  <%= button_to image_tag("soccer_ball.png", size: "100x100"),
      shoot_games_path(choice: "left"), method: :post, class: "shoot-btn-circle" %>
  </div>
  <div class="shoot-zone center">
  <%= button_to image_tag("soccer_ball.png", size: "100x100"),
      shoot_games_path(choice: "center"), method: :post, class: "shoot-btn-circle" %>
  </div>
  <div class="shoot-zone right">
  <%= button_to image_tag("soccer_ball.png", size: "100x100"),
      shoot_games_path(choice: "right"), method: :post, class: "shoot-btn-circle" %>
  </div>
</div>

<div class="pk-mini-stats">
  <span>ゴール率 <%= @stats[:rate] %>%<%= @stats[:streak] %></span>
  <%= link_to "▶ 戦績一覧を見る", stats_games_path, class: "pk-mini-stats__link" %>
</div>
