<h1 style="text-align:center;">戦績一覧</h1>

<p style="text-align:center;">
  試行数: <%= @stats[:total] %>
  ゴール: <%= @stats[:goals] %>
  セーブ: <%= @stats[:saves] %>
  成功率: <%= @stats[:rate] %>
  連続ゴール: <%= @stats[:streak] %>
</p>

<table style="width: min(90vw, 800px); margin: 12px auto; border-collapse: collapse; font-size: 14px;">
  <thead>
    <tr>
      <th>日時</th>
      <th>あなた</th>
      <th>キーパー</th>
      <th>結果</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |g| %>
      <tr>
        <td><%= g.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= g.choice %></td>
        <td><%= g.keeper_choice %></td>
        <td style="font-weight:bold; color:<%= g.result ? 'green' : 'red' %>;">
          <%= g.result ? '⚽️ ゴール' : '🧤 セーブ' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align:center; margin-top:20px;">
  <%= link_to "← ⚽️PK挑戦に戻る", root_path, class: "btn" %>
</div>
